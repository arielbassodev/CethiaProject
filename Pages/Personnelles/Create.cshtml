@page
@model ProjetD.Pages.Personnelles.CreateModel

@{
    ViewData["Title"] = "Create";
}

<br /><br />
<h4>Ajouter un membre</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div id="container">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Personnel.Nom" class="control-label"></label>
                <input asp-for="Personnel.Nom" class="form-control" />
                <span asp-validation-for="Personnel.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Personnel.Prenom" class="control-label"></label>
                <input asp-for="Personnel.Prenom" class="form-control" />
                <span asp-validation-for="Personnel.Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Personnel.TypeD" class="control-label"></label>
                <input asp-for="Personnel.TypeD" class="form-control" />
                <span asp-validation-for="Personnel.TypeD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Personnel.DateArrivé" class="control-label"></label>
                <input asp-for="Personnel.DateArrivé" class="form-control" />
                <span asp-validation-for="Personnel.DateArrivé" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Personnel.Genre" class="control-label"></label>
                <input asp-for="Personnel.Genre" class="form-control" />
                <span asp-validation-for="Personnel.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
         <a asp-page="./Delete">Back to List</a>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
