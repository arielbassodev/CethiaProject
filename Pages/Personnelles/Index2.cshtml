@page
@model ProjetD.Pages.Personnelles.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Supprimer un membre </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Personnel[0].Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personnel[0].Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personnel[0].TypeD)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personnel[0].DateArrivé)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personnel[0].Genre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Personnel) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeD)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateArrivé)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>
            <td>
              
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
